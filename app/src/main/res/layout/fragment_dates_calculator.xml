<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wordpress.grayfaces.days.Fragment.DatesCalculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@+id/cal_layout_NumberDates">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/from"/>
        <TextView
            android:id="@+id/cal_txtStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:text="10.1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cal_layout_NumberDates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@+id/cal_txtCalDate">
        <EditText
            android:id="@+id/cal_txtNumberDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="500"
            android:inputType="number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/th_is"/>
    </LinearLayout>
    <TextView
        android:id="@+id/cal_txtCalDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14.8"
        android:textSize="26sp"
        android:layout_centerInParent="true"/>
</RelativeLayout>
